<h2>Create an Author</h2>
<% if @author.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @author.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_tag authors_path, method: "post" do %>
  <div class="field">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name", @author.name, class: (@author.errors[:phone_number].any? ? 'field_with_errors' : '') %>
  </div>

  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email", @author.email, class: (@author.errors[:email].any? ? 'field_with_errors' : '') %>
  </div>

  <div class="field">
    <%= label_tag "phone_number", "Phone Number" %>
    <%= text_field_tag "phone_number", @author.phone_number, class: (@author.errors[:phone_number].any? ? 'field_with_errors' : '') %>
  </div>

  <%= submit_tag "Create" %>
<% end %>
